@import "_mixins.styl"

$bg_color = #97b3c9
$badge_color = $bg_color
$shadow = #4b5964


body
  background-color $bg_color !important


@media only screen and (min-width 1024px)
  .panel-body
    font-size 18px

  img
    &:not(.pull-right)
      margin 2px 5px 5px 5px !important

    &.pull-right
      margin 2px 0px 5px 5px !important


@media screen and (max-width 800px)
  img
    margin 0px 1px 0px 1px


.panel-heading
  color white !important
  background-image url(/img/montegasppa-title-bg.jpg) !important
  background-repeat no-repeat !important
  background-position center !important
  bg-size cover !important


.panel-heading > h2
  text-shadow $shadow 2px 2px 2px


.tag
  color: white !important
  background-color $bg_color !important

.tag a
  color: white


.badge
  background-color $badge_color !important


.label-default
  background-color $badge_color !important


#release
  text-shadow black 1px 1px 1px
