@import "_mixins.styl"

$bg_color = #97b3c9
$badge_color = $bg_color
$divider = "/img/divider.gif"
$shadow = #4b5964


body
  background-color $bg_color !important


hr
  display block
  border none
  height 10px
  bg-size cover auto
  background-image url($divider)
  background-repeat no-repeat
  background-position center


.panel-heading
  color white !important
  background-image url(/img/montegasppa-title-bg.jpg) !important
  background-repeat no-repeat !important
  background-position center !important
  bg-size cover !important


.panel-heading > h2
  text-shadow $shadow 2px 2px 2px


.tag
  color: white !important
  background-color $bg_color !important

.tag a
  color: white


.badge
  background-color $badge_color !important


.label-default
  background-color $badge_color !important


#release
  text-shadow black 1px 1px 1px
