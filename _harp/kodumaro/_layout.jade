extends ../_layout.jade

block blog-head
  title #{public.kodumaro._data.blog.title} :: #{title}
  link(rel="alternate" type="application/atom+xml" title=public.kodumaro._data.blog.title
       href=public.kodumaro._data.blog.url+"feed.xml")/
  link(rel="stylesheet" href="/css/kodumaro.css")/
  link(rel="icon" href="/img/kodumaro.ico")/
  script(src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js")

block append nav-bar
  li(class={active: home}): a(href=public.kodumaro._data.blog.url)!= public.kodumaro._data.blog.title
  if (!home)
    li.active: a(href=".") !{title}

block main-container
  div(class=["panel", "panel-default"])
    .panel-heading
      h2.mg-title !{public.kodumaro._data.blog.title} :: !{title}
      if release
        h6.pull-right Publicado em #{release}
      h6!= public.kodumaro._data.blog.subtitle

    .panel-body
      != yield

  div(class=["panel", "panel-default"])
    .panel-body(align="right")
      small: a(href="https://github.com/cacilhas/cacilhas.github.io/issues/new?title="+public.kodumaro._data.blog.title+"+::+"+title target="_blank")
        | Criar #[em issue]

block footer
  p.small
    if author
      | Autor: #{author} &nbsp;
    else
      | !{public.kodumaro._data.blog.title} &nbsp;
    a(rel="license" href="http://creativecommons.org/licenses/by/4.0/deed.pt")
      img(alt="[CC-BY 4.0]" src="https://i.creativecommons.org/l/by/4.0/80x15.png"
          style={"border-width" :"0"})
