include ./_includes/tags.jade

div.col-md-4
  div.list-group
    h3(class=["mg-title", "list-group-item", "active"]) Mapa
    a(class=["list-group-item", "small"] href="/") Início

    each yearDir, yearSlug in public.montegasppa
      if yearDir
        each monthDir, monthSlug in yearDir
          if monthDir._data
            each page, slug in monthDir._data
              if (!page.hidden)
                - var url = "montegasppa/" + yearSlug + "/" + monthSlug + "/" + slug + ".html"
                a(class=["list-group-item", "small"] href=url)
                  | Reflexões… :: !{page.title}

    a(class=["list-group-item", "small"] href="/kodumaro/") Kodumaro

    each yearDir, yearSlug in public.kodumaro
      if yearDir
        each monthDir, monthSlug in yearDir
          if monthDir._data
            each page, slug in monthDir._data
              if (!page.hidden)
                - var url = "kodumaro/" + yearSlug + "/" + monthSlug + "/" + slug + ".html"
                a(class=["list-group-item", "small"] href=url)
                  | Kodumaro :: !{page.title}

- var count = 0

each yearDir, yearSlug in public.montegasppa
  if yearDir
    each monthDir, monthSlug in yearDir
      if monthDir._data
        each page, slug in monthDir._data
          if count < 3
            if (!page.hidden)
              - count++
              - var url = "montegasppa/" + yearSlug + "/" + monthSlug + "/" + slug + ".html"

              a(class=["col-md-4", "mg-nou"] href=url role="button")
                div(class=["panel", "panel-default"])
                  div.panel-heading
                    h3.mg-title!= page.title
                  div.panel-body
                    p.lead!= page.content

          else
            - break

- count = 0

each yearDir, yearSlug in public.kodumaro
  if yearDir
    each monthDir, monthSlug in yearDir
      if monthDir._data
        each page, slug in monthDir._data
          if count < 3
            if (!page.hidden)
              - count++
              - var url = "kodumaro/" + yearSlug + "/" + monthSlug + "/" + slug + ".html"

              a(class=["col-md-4", "mg-nou"] href=url role="button")
                div(class=["panel", "panel-default"])
                  div.panel-heading
                    h3.mg-title!= page.title
                  div.panel-body
                    p.lead!= page.content

          else
            - break

div.col-md-4
  div.list-group
    h3(class=["mg-title", "list-group-item", "active"]): em Tags
    ul.list-group
      each tag in tags
        li.list-group-item
          select.list-group-item(onchange="window.location = this.value; return true;"
                                 style={width: "100%"})
            option(selected=true)!= tag.name
            each page in tag.pages
              option(value=page.url)!= page.title
